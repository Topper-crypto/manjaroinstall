pacman-mirrors --fasttrack
pacman -Syy
pacman -Sy arch-install-scripts --noconfirm
basestrap -i /mnt base base-devel linux60 linux60-headers linux-firmware dosfstools btrfs-progs xf86-video-intel intel-ucode amd-ucode iucode-tool xf86-video-amdgpu xf86-video-nouveau archlinux-keyring manjaro-keyring manjaro-tools-base networkmanager dhcpcd dhclient vim nano bluez bluez-utils nano --noconfirm
